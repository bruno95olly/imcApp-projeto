<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="32dp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="315dp"
       android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <androidx.cardview.widget.CardView
               android:layout_width="50dp"
               android:layout_height="50dp"
               app:cardCornerRadius="50dp"
               android:layout_gravity="end">

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:scaleType="centerCrop"
                   android:src="@drawable/agostinho">

               </ImageView>

           </androidx.cardview.widget.CardView>

       </LinearLayout>
       
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="180dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/workout"/>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="85dp"
           android:orientation="vertical"
           >

           <TextView
               android:layout_width="match_parent"
               android:layout_height="35dp"
               android:text="@string/pesar"
               android:textColor="#FA012427"
               android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="50dp">
               <TextView
                   android:drawableStart="@drawable/ic_baseline_info_24"
                   android:drawableTint="@color/principal_500"
                   android:drawablePadding="8dp"

                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:text="@string/informacao"
                   android:paddingStart="10dp"/>

           </LinearLayout>

       </LinearLayout>

   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

            <TextView
                android:drawableStart="@drawable/accessibility_24"
                android:drawableTint="@color/principal_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dados_pesagem"
                android:layout_marginTop="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data da Pesagem:"/>
        </LinearLayout>

</LinearLayout>